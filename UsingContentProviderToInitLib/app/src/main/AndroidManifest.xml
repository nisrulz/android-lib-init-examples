<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.nisrulz.example.usingcontentprovidertoinitlib">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UsingContentProviderToInitLib">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Uncomment to remove merged ContentProvider from MyLib
        <provider xmlns:tools="http://schemas.android.com/tools"
            android:name="github.nisrulz.example.mylibrary.MyLibInitProvider"
            android:authorities="${applicationId}.mylibrary"
            tools:node="remove" /> -->

    </application>

</manifest>